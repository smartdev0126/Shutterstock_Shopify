<!-- /snippets/social-sharing.liquid -->
<ul class="tuneboom-share" style="padding: 0;">

    <li>
      <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn--small btn--share share-facebook">
        {% include 'tuneboom-icon-facebook' %}
        <span class="share-title" aria-hidden="true">SHARE</span>
      </a>
    </li>

    <li>
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="btn--small btn--share share-twitter">
        {% include 'tuneboom-icon-twitter' %}
        <span class="share-title" aria-hidden="true">TWEET</span>
      </a>
    </li>
</ul>
